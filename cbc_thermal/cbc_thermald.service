[Unit]
Description=CBC thermald service
After=u_cbc_attach.service
Conflicts=thermald.service

[Service]
Type=simple
ExecStart=/usr/bin/bash -c "/usr/bin/cbc_thermal & sleep 10; /usr/bin/thermald --no-daemon --ignore-cpuid-check --ignore-default-control --config-file /usr/share/ioc-cbc-tools/thermal-conf.xml"
Restart=no

[Install]
WantedBy=multi-user.target
